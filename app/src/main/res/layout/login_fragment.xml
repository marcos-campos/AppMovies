<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"/>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/back_blue"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        android:layout_marginBottom="3dp"
        android:layout_marginHorizontal="20dp" />

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/back_red"
        app:layout_constraintBottom_toTopOf="@id/view6"
        android:layout_marginBottom="3dp"
        android:layout_marginHorizontal="10dp"/>

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="5dp"
        android:background="@color/back_green"
        app:layout_constraintBottom_toTopOf="@id/view7"
        android:layout_marginBottom="3dp"/>


    <TextView
        android:id="@+id/login_tv_welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bem-vindo ao Movies On The House"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:textSize="21sp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/login_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FaÃ§a o login e encontre uma variedade de filmes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_tv_welcome"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_et_email"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_tv_description"
        android:layout_marginTop="70dp"
        android:hint="E-mail"
        app:startIconDrawable="@drawable/ic_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_search_background"
            android:textSize="16sp"
            android:imeOptions="actionNext"
            android:inputType="textCapSentences"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_et_senha"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_et_email"
        android:layout_marginTop="30dp"
        android:hint="Senha"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/ic_lock">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_search_background"
        android:textSize="16sp"
        android:inputType="numberPassword"
        android:imeOptions="actionDone"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_search_background"
        android:clickable="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/orientacao"
        app:layout_constraintTop_toBottomOf="@+id/login_et_senha"
        android:layout_marginEnd="15dp"/>

    <ImageView
        android:id="@+id/login_iv_gmail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/gmail"
        app:layout_constraintStart_toEndOf="@+id/orientacao"
        app:layout_constraintTop_toTopOf="@+id/login_btn_login"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/orientacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/login_btn_login"
        app:layout_constraintBottom_toBottomOf="@id/login_btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="60dp"
        android:background="@color/gold"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        android:layout_marginBottom="3dp"
        android:layout_marginHorizontal="30dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="66dp"
        android:background="@color/back_blue"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        android:layout_marginBottom="3dp"
        android:layout_marginHorizontal="20dp"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="72dp"
        android:background="@color/back_red"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        android:layout_marginBottom="3dp"
        android:layout_marginHorizontal="10dp"/>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="78dp"
        android:background="@color/back_green"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>